{
    "version": 2,
    "builds": [
        {
            "src": "templates/index.html",
            "use": "@vercel/static"
        },
        {
            "src": "static/*",
            "use": "@vercel/static"
        },
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/cotacao",
            "dest": "/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/templates/index.html"
        }
    ]
}